<UserControl x:Class="ChessForge.EvaluationChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessForge"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="672"
             Visibility="Visible">
    <Grid x:Name="MainGrid" MouseMove="Grid_MouseMove" PreviewMouseDown="Grid_PreviewMouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="74"/>
            <RowDefinition Height="74"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="UiCnvWhite" Grid.Row="0" Background="LightGreen" ClipToBounds="True" Grid.ColumnSpan="2" 
                Height="74" Width="670" 
                HorizontalAlignment="Left" VerticalAlignment="Top">
        </Canvas>
        <Canvas x:Name="UiCnvBlack" Grid.Row="1" Background="Green" ClipToBounds="True" Grid.ColumnSpan="2" 
                Height="74" Width="670" 
                HorizontalAlignment="Left" VerticalAlignment="Top">
        </Canvas>
    </Grid>

</UserControl>
