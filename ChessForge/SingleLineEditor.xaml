<Window x:Class="ChessForge.SingleLineEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:ChessForge.Properties"
        xmlns:local="clr-namespace:ChessForge"
        mc:Ignorable="d"
        Title="" Height="125" Width="400">
    <Grid>
        <TextBox x:Name="UiTbText" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320"/>
        <Button x:Name="UiBtnOk" Content="{x:Static p:Resources.Ok}" IsDefault="True" Width="80" HorizontalAlignment="Center" Margin="-110,48,0,0" VerticalAlignment="Top" Click="UiBtnOk_Click"/>
        <Button x:Name="UiBtnCancel" Content="{x:Static p:Resources.Cancel}" IsCancel="True" Width="80" HorizontalAlignment="Center" Margin="110,48,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
