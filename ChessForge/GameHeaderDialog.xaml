<Window x:Class="ChessForge.GameHeaderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessForge"
        mc:Ignorable="d"
        Title="Game/Exercise Options" Height="320" Width="513">
    <Grid>
        <Label x:Name="UiLblWhite" Content="White" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UiTbWhite" HorizontalAlignment="Left" Margin="80,33,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="400"/>
        <Label x:Name="UiLblBlack" Content="Black" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UiTbBlack" HorizontalAlignment="Left" Margin="80,63,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="400"/>
        <Label x:Name="UiLblEvent" Content="Event" HorizontalAlignment="Left" Margin="20,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UiTbEvent" HorizontalAlignment="Left" Margin="80,93,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="400"/>
        <Label x:Name="UiLblRound" Content="Round" HorizontalAlignment="Left" Margin="20,120,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UiTbRound" HorizontalAlignment="Left" Margin="80,123,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="40"/>
        <Label x:Name="UiLblDate" Content="Date" HorizontalAlignment="Left" Margin="160,120,0,0" VerticalAlignment="Top"/>
        <Button x:Name="UiBtnOk" Content="OK" HorizontalAlignment="Left" Margin="140,234,0,0" Width="80" VerticalAlignment="Top" Click="UiBtnOk_Click"/>
        <Button x:Name="UiBtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="240,234,0,0" Width="80" VerticalAlignment="Top" Click="UiBtnCancel_Click"/>
        <Button x:Name="UiBtnHelp" Content="Help" HorizontalAlignment="Left" Margin="370,234,0,0" Width="80" VerticalAlignment="Top" Click="UiBtnHelp_Click"/>
        <GroupBox x:Name="UiGbResult" HorizontalAlignment="Left" Height="55" Header="Result" Margin="80,155,0,0" VerticalAlignment="Top" Width="300"/>
        <RadioButton x:Name="UiRbWhiteWin" Content="1-0" HorizontalAlignment="Left" Margin="100,180,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="UiRbBlackWin" Content="0-1" HorizontalAlignment="Left" Margin="170,180,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="UiRbDraw" Content="1/2" HorizontalAlignment="Left" Margin="240,180,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="UiRbNoResult" Content="*" HorizontalAlignment="Left" Margin="310,180,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="UiDatePicker" HorizontalAlignment="Left" Margin="214,122,0,0" VerticalAlignment="Top" IsTodayHighlighted="False"/>
    </Grid>
</Window>
