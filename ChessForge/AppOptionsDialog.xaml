<Window x:Class="ChessForge.AppOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessForge"
        mc:Ignorable="d"
        Title="Source Forge Options" Height="300" Width="600">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"  >
        <Button x:Name="_btnSave" Content="Save" HorizontalAlignment="Left" Margin="202,220,0,0" VerticalAlignment="Top" Width="80" Height="22"  Visibility="Visible" Click="_btnSave_Click"/>
        <Button x:Name="_btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="328,220,0,0" VerticalAlignment="Top" Width="80" Height="22"  Visibility="Visible" Click="_btnCancel_Click" />
        <Label x:Name="_lblThinkTimeInGame" Content="In Game" HorizontalAlignment="Left" Margin="52,117,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="_tbEngTimeInGame" HorizontalAlignment="Left" HorizontalContentAlignment="Center"  Margin="141,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="_tbEngEvalTime" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="141,157,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="_lblEvalTime" Content="Evaluation" HorizontalAlignment="Left" Margin="52,154,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="_tbReplaySpeed" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="433,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="_lblReplaySpeed" Content="Time per Move" HorizontalAlignment="Left" Margin="335,118,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_lblEngineExe" Content="Engine Executable" HorizontalAlignment="Left" Margin="26,31,0,0" VerticalAlignment="Top"/>
        <Button x:Name="_btnLocateEngine" Content=". . ." HorizontalAlignment="Left" Margin="545,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.681,0.002" Width="28" Click="_btnLocateEngine_Click"/>
        <TextBox x:Name="_tbEngineExe" IsEnabled="False" HorizontalAlignment="Left" Margin="141,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="387"/>
        <GroupBox x:Name="_boxEngThinkTime" HorizontalAlignment="Left" Height="115" Header="Engine Time per Move (seconds)" Margin="22,86,0,0" VerticalAlignment="Top" Width="270"/>
        <GroupBox x:Name="_boxAutoReplay" HorizontalAlignment="Left" Height="115" Header="Auto Replay Speed (seconds)" Margin="314,86,0,0" VerticalAlignment="Top" Width="270"/>

    </Grid>
</Window>
