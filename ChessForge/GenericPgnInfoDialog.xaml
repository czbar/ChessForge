<Window x:Class="ChessForge.GenericPgnInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessForge"
        mc:Ignorable="d"
        Title="Import Games from PGN" Height="270" Width="600">
    <Grid>
        <Button x:Name="UiBtnOk" Content="OK" Width="80" Height="22" HorizontalAlignment="Center" Margin="0,185,200,0" VerticalAlignment="Top" Click="UiBtnOk_Click"/>
        <Button x:Name="UiBtnCancel" Content="Cancel" Width="80" Height="22" HorizontalAlignment="Center" Margin="0,185,0,0" VerticalAlignment="Top" Click="UiBtnCancel_Click"/>
        <Button x:Name="UiBtnHelp" Content="Help" Width="80" Height="22" HorizontalAlignment="Center" Margin="200,185,0,0" VerticalAlignment="Top" Click="UiBtnHelp_Click"/>
        <CheckBox x:Name="UiCbDoNotShow" Content="Do not show this message again" HorizontalAlignment="Left" Margin="40,150,0,0" VerticalAlignment="Top"/>
        <Label x:Name="UiLblInfo" Background="LightGray" Content="" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="124" Width="540"/>

    </Grid>
</Window>
