<Window  x:Name="_dlgPromotion" x:Class="ChessForge.PromotionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessForge"
        mc:Ignorable="d"
         WindowStyle="None"
         AllowsTransparency="True"
         Background="Transparent"
        Title="PromotionDialog" Height="400" Width="80" MouseDown="_dlgPromotion_MouseDown" MouseUp="_dlgPromotion_MouseUp" >
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <Image x:Name="_imgWhitePromo" Margin="0,0,0,0" Source="Resources/Images/WhitePromo.png" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="400" Grid.Row="0" Grid.Column="0" Grid.RowSpan="1"/>
        <Image x:Name="_imgBlackPromoInverted" Margin="0,0,0,0" Source="Resources/Images/BlackPromoInverted.png" Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="400" Grid.Row="0"  Grid.Column="0" Grid.RowSpan="1"/>
        <Image x:Name="_imgWhitePromoInverted" Margin="0,0,0,0" Source="Resources/Images/WhitePromoInverted.png" Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="400" Grid.Row="0"  Grid.Column="0" Grid.RowSpan="1"/>
        <Image x:Name="_imgBlackPromo" Margin="0,0,0,0" Source="Resources/Images/BlackPromo.png" Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="400" Grid.Row="0"  Grid.Column="0" Grid.RowSpan="1"/>
    </Grid>
</Window>
