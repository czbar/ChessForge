<Window x:Class="ChessForge.DownloadedGamesActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessForge"
        xmlns:p="clr-namespace:ChessForge.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.SaveDownloadedGames}" Height="295" Width="400">
    <Grid>
        <GroupBox x:Name="UiGbOptions" Header="" Margin="15,15,15,0" Height="170" VerticalAlignment="Top">
            <StackPanel Margin="2,0,-2,0">
                <CheckBox x:Name="UiCbCreateNewWorkbook" Content="{x:Static p:Resources.DwnLdCreateNewWorkbook}" HorizontalAlignment="Left" Margin="30,20,0,0" Grid.Row="2" VerticalAlignment="Top" Checked="UiCbCreateNewWorkbook_Checked" Unchecked="UiCbCreateNewWorkbook_Unchecked"/>
                <RadioButton x:Name="UiRbRepertoireChapters" Margin="30,30,0,0" Content="{x:Static p:Resources.DwnLdCreateRepertoireChapter}"/>
                <RadioButton x:Name="UiRbCreateNewChapter" Content="{x:Static p:Resources.DwnLdCreateNewChapter}" HorizontalAlignment="Left" Margin="30,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                <RadioButton x:Name="UiRbAppendCurrentChapter" Content="{x:Static p:Resources.DwnLdAppendToCurrentChapter}" HorizontalAlignment="Left" Margin="30,10,0,0" Grid.Row="2" VerticalAlignment="Top"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="UiBtnOk" IsDefault="True" Content="Ok" HorizontalAlignment="Center" Margin="-220,210,0,0" Width="100" VerticalAlignment="Top" Click="UiBtnOk_Click"/>
        <Button x:Name="UiBtnCancel" IsCancel="True" Content="Cancel" HorizontalAlignment="Center" Margin="0,210,0,0" Width="100" VerticalAlignment="Top"/>
        <Button x:Name="UiBtnHelp" Content="Help" HorizontalAlignment="Center" Margin="220,210,0,0" Width="100" VerticalAlignment="Top" Click="UiBtnHelp_Click"/>

    </Grid>
</Window>
